    {
      "name": "digikam",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DCMAKE_CXX_FLAGS=-isystem /app/include/KF5",
        "-DENABLE_MYSQLSUPPORT=ON",
        "-DENABLE_INTERNALMYSQL=ON",
        "-DENABLE_MEDIAPLAYER=ON",
        "-DENABLE_DBUS=ON",
        "-DENABLE_APPSTYLES=ON",
        "-DENABLE_QWEBENGINE=ON"
      ],
      "post-install": [
        "gunzip -S z /app/share/icons/hicolor/scalable/apps/*.svgz"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/digikam/7.6.0/digiKam-7.6.0.tar.xz",
          "sha256": "d8e1ee7321d3fc313916f515756e3029ac4187dc453b6933848d4de5314b6641"
        }
      ],
